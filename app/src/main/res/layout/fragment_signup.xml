
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.psycholisk.sawa.SignupFragment"
    android:background="@color/teal_500">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:drawableLeft="@drawable/back_navigation_button_26dp"
        android:text="BACK"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:id="@+id/nav_back"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"        >
        <EditText
            android:id="@+id/registeremail"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/email_input_icon_20dp"
            style="@style/form_input"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:textColor="#FF0000"
            android:id="@+id/register_emailvaldiation"/>
        <EditText
            android:id="@+id/registermobile"
            android:layout_marginTop="5dp"
            android:hint="Mobile"
            android:drawableLeft="@drawable/phone_input_icon_20dp"
            style="@style/form_input"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:textColor="#FF0000"
            android:inputType="number"
            android:id="@+id/register_mobilevaldiation"/>
        <EditText
            android:id="@+id/registerpassword"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password_input_icon_20dp"
            android:hint="Password"
            style="@style/form_input"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:textColor="#FF0000"
            android:id="@+id/register_passwordvaldiation"/>
        <EditText
            android:id="@+id/registerconfirmpassword"
            android:layout_marginTop="5dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/password_input_icon_20dp"
            android:hint="Confirm Password"
            style="@style/form_input"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="15dp"
            android:layout_marginTop="2dp"
            android:textColor="#FF0000"
            android:id="@+id/register_confirmvaldiation"/>

        <Button
            android:id="@+id/registerbtn"
            android:layout_marginTop="23dp"
            android:text="Sign Up"
            android:textAllCaps="false"
            style="@style/standard_button"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_marginTop="0dp"
            android:textColor="#FF0000"
            android:id="@+id/register_generalvalidation"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify_code_insignup"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"/>


</RelativeLayout>
